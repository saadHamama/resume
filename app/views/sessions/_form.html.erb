<%= render 'layouts/messages' %>
<%= form_tag '/login' do %>
    <fieldset>
    <legend>Login</legend>
    <%= label_tag :username %>
    <%= text_field_tag :username, params[:username] || '' %>
    <%= label_tag :password %>
    <%= password_field_tag :password, params[:password] || '' %>
    <%= submit_tag "Login", class: 'button small radius' %>
    </fieldset>
<% end %>