<%= render 'shared/errors', obj: @user %>


<%= form_for @user do |f| %>
  <fieldset>
    <legend>Register</legend>
    <div class="row">
      <div class="small-6 columns">
        <%= f.label :username %>
        <%= f.text_field :username %>
      </div>
      <div class="small-6 columns">
        <%= f.label :password %>
        <%= f.password_field :password %>
      </div>
    </div>

    <div class="row">
      <div class="small-6 columns">
        <%= f.label :first_name %>
        <%= f.text_field :first_name %>
      </div>
      <div class="small-6 columns">
        <%= f.label :last_name %>
        <%= f.text_field :last_name %>
      </div>
    </div>
    <%= f.submit "Register", class: 'button small radius' %>
  </fieldset>
<% end %>
